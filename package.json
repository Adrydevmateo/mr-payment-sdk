{
  "name": "mr-payment-headless",
  "version": "0.0.3",
  "type": "module",
  "main": "dist/mrpayment-headless.umd.js",
  "module": "dist/mrpayment-headless.es.js",
  "types": "dist/mrpayment-headless.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/mrpayment-headless.d.ts",
      "import": "./dist/mrpayment-headless.es.js",
      "require": "./dist/mrpayment-headless.umd.js"
    }
  },
  "keywords": [
    "react",
    "payment",
    "sdk",
    "headless",
    "typescript",
    "vite",
    "form",
    "components",
    "ui",
    "accessibility"
  ],
  "description": "A headless React payment SDK built with TypeScript and Vite",
  "author": "Adrydevmateo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adrydevmateo/mr-payment-headless.git"
  },
  "homepage": "https://github.com/Adrydevmateo/mr-payment-headless#readme",
  "bugs": {
    "url": "https://github.com/Adrydevmateo/mr-payment-headless/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "publish:private": "npm publish --access restricted",
    "publish:public": "npm publish --access public",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "types": "tsc -p tsconfig.types.json",
    "postbuild": "pnpm types && cp dist/types/index.d.ts dist/mrpayment-headless.d.ts && mkdir -p dist/payment && cp dist/types/payment/payment-form.d.ts dist/payment/ && rm -rf dist/types && rm -f dist/App.d.ts dist/main.d.ts dist/test.d.ts dist/*.d.ts.map dist/payment/*.d.ts.map dist/vite.svg",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "@types/node": "24.0.11"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "9.30.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react-swc": "3.10.2",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.30.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "globals": "16.3.0",
    "jsdom": "^24.0.0",
    "playwright": "1.53.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.1",
    "vite": "7.0.3",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  }
}
